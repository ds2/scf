<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.googlecode.socofo</groupId>
  <artifactId>socofo</artifactId>
  <name>SoCoFo Parent POM</name>
  <version>0.0.2-SNAPSHOT</version>
  <packaging>pom</packaging>
  <description>Yet another source code formatter 4</description>
  <url>http://socofo.googlecode.com/</url>
  <issueManagement>
    <system>google</system>
    <url>http://code.google.com/p/socofo/issues/list</url>
  </issueManagement>
  <inceptionYear>2009</inceptionYear>
  <developers>
    <developer>
      <id>lexxy23</id>
      <name>Dirk Strauss</name>
      <email>lexxy23@gmail.com</email>
      <url>http://ds-2.de/</url>
      <organization>DS/2</organization>
      <organizationUrl>http://ds-2.de/</organizationUrl>
      <roles>
        <role>Lead Developer</role>
      </roles>
    </developer>
  </developers>
  <scm>
    <connection>scm:hg:https://socofo.googlecode.com/hg</connection>
    <developerConnection>scm:hg:https://socofo.googlecode.com/hg</developerConnection>
    <url>http://code.google.com/p/socofo/source/browse/</url>
  </scm>
  <organization>
    <name>DS/2</name>
    <url>http://ds-2.de/</url>
  </organization>
  <prerequisites>
    <maven>2.2.1</maven>
  </prerequisites>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>2.4</version>
        <dependencies>
          <dependency>
            <groupId>checkstyle</groupId>
            <artifactId>checkstyle</artifactId>
            <version>5.0</version>
          </dependency>
          <dependency>
            <groupId>com.googlecode.socofo</groupId>
            <artifactId>socofo-config</artifactId>
            <version>0.0.2-SNAPSHOT</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.0-beta-9</version>
        <configuration>
          <releaseProfiles>googleRelease</releaseProfiles>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <version>1.5.1</version>
        <dependencies>
          <dependency>
            <groupId>com.googlecode.socofo</groupId>
            <artifactId>socofo-config</artifactId>
            <version>0.0.2-SNAPSHOT</version>
          </dependency>
        </dependencies>
        <configuration>
          <!-- 
          <basedir>${basedir}</basedir>
          -->
          <header>/configs/license_header.txt</header>
          <excludes>
            <exclude>.hg/**</exclude>
            <exclude>**/*test.txt</exclude>
            <exclude>.hgignore</exclude>
            <exclude>.hgtags</exclude>
            <exclude>BUILD.txt</exclude>
            <exclude>.clover/**</exclude>
            <exclude>**/test*.xml</exclude>
            <exclude>**/test*.txt</exclude>
            <exclude>**/.checkstyle</exclude>
            <exclude>**/.pmd</exclude>
            <exclude>README.txt</exclude>
            <exclude>**/license_header.txt</exclude>
            <exclude>**/package-info.java</exclude>
          </excludes>
          <encoding>utf-8</encoding>
          <mapping>
            <g>JAVADOC_STYLE</g>
          </mapping>
          <properties>
            <year>${project.inceptionYear}</year>
          </properties>
        </configuration>
        <executions>
          <execution>
            <phase>deploy</phase>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.4.3</version>
        <configuration>
          <argLine>-Djava.util.logging.config.file=src/test/resources/logging.properties</argLine>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
  </repositories>
  <pluginRepositories>
  </pluginRepositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.6</version>
      <type>jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>jul-to-slf4j</artifactId>
      <version>1.5.10</version>
      <type>jar</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-jdk14</artifactId>
      <version>1.5.10</version>
      <type>jar</type>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>surefire-report-maven-plugin</artifactId>
        <version>2.0-beta-1</version>
      </plugin>
      <!--
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.6</version>
            </plugin>
            -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-changes-plugin</artifactId>
        <version>2.1</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <configLocation>configs/scf-checks.xml</configLocation>
          <headerLocation>configs/license_header.txt</headerLocation>
          <linkXRef>true</linkXRef>
          <sourceEncoding>UTF-8</sourceEncoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>taglist-maven-plugin</artifactId>
        <version>2.3</version>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>cobertura-maven-plugin</artifactId>
        <version>2.3</version>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>2.1</version>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jdepend-maven-plugin</artifactId>
        <version>2.0-beta-2</version>
      </plugin>
    </plugins>
  </reporting>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.google.inject</groupId>
        <artifactId>guice</artifactId>
        <version>2.0</version>
        <type>jar</type>
        <scope>compile</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <modules>
    <module>antlr-scripts</module>
    <module>api</module>
    <module>rules</module>
    <module>core</module>
    <module>plugins</module>
    <module>runtime</module>
    <module>config</module>
  </modules>
  <licenses>
    <license>
      <distribution>repo</distribution>
      <name>GNU GENERAL PUBLIC LICENSE</name>
      <url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
    </license>
  </licenses>
  <mailingLists>
    <mailingList>
      <archive>http://groups.google.com/group/socofo-dev</archive>
      <name>SoCoFo Developer Mailing list</name>
      <post>socofo-dev@googlegroups.com</post>
      <unsubscribe>socofo-dev+unsubscribe@googlegroups.com</unsubscribe>
    </mailingList>
  </mailingLists>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <distributionManagement>
    <repository>
      <id>ds2.releases</id>
      <url>dav:http://localhost:13080/nexus/content/repositories/releases</url>
    </repository>
    <snapshotRepository>
      <id>ds2.snapshots</id>
      <url>dav:http://localhost:13080/nexus/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
</project>
<tns:formatter-rules
	xmlns:tns="http://www.ds2/ns/socofo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ds2/ns/socofo http://www.ds2/ns/socofo "
>
	<xml-rules>
		<commonAttributes>
			<maxLineWidth>80</maxLineWidth>
			<indentSequence>  </indentSequence>
			<tabSize>4</tabSize>
			<stopOnLongline>true</stopOnLongline>
		</commonAttributes>
		<separateAttributesPerLine>true</separateAttributesPerLine>
		<alignFinalBracketOnNewline>OnAttributes</alignFinalBracketOnNewline>
		<clearBlankLines>true</clearBlankLines>
		<insertWsAtEmptyElement>true</insertWsAtEmptyElement>
		<sortAttributes>true</sortAttributes>
		<textBlocks>
			<header>header</header>
			<footer>footer</footer>
		</textBlocks>
		<commentsRules>
			<breakAfterBegin>true</breakAfterBegin>
			<breakBeforeEnd>true</breakBeforeEnd>
			<breakType>BeautyForcedBreak</breakType>
			<parsing>NoParsing</parsing>
			<commentIndentSpacer></commentIndentSpacer>
		</commentsRules>
		<newlineRules>
			<beforeIfStatements>true</beforeIfStatements>
			<beforeComment>true</beforeComment>
			<afterXmlEndTag>true</afterXmlEndTag>
			<afterEachXmlAttribute>true</afterEachXmlAttribute>
			<onLevelChange>true</onLevelChange>
		</newlineRules>
	</xml-rules>
</tns:formatter-rules>